doctype html
html
    head
        meta(charset='utf-8')
        meta(http-equiv='x-ua-compatible', content='ie=edge')
        meta(name='viewport', content='width=device-width, initial-scale=1')
        title #{lang.global.app} - #{title}
        link(rel='stylesheet', href='/css/main.css')

        for tpl in templates
            script(id=tpl.name,type='text/x-handlebars-template').
                !{tpl.template}
  body
    //- mixins
    include includes/shortprofile
    include includes/errors
    
    //- real code
    include includes/header
    block content

    //- modal
    #modalContainer.modal.fade(tabindex='-1',role='dialog')
        .modal-dialog(role='document')
            .modal-content
                .modal-header
                    button.close(type='button',data-dismiss='modal')
                        span.
                            &times;
                    h4.modal-title
                .modal-body
                    button.close(type='button',data-dismiss='modal')
                        span.
                            &times;
                    div(data-modal-body)
                .modal-footer

    script(src='https://cdnjs.cloudflare.com/ajax/libs/tether/1.3.7/js/tether.min.js',integrity='sha256-/5pHDZh2fv1eZImyfiThtB5Ag4LqDjyittT7fLjdT/8=',crossorigin='anonymous')
    script(async,data-main='/js/main',src='/js/lib/require.js')

